@* nav URL: "/studysubject"*@
@page "/studysubject"

    <div class="col">
        <div class="row">
            <h3>The Flasher</h3>
            <br />
            <h5>Flashcard application</h5>
        </div>
        <div class="row mt-4">
            <div class="input-group">
                <label for="subjects" class="col-3 col-form-label">Choose a subject</label>
                <select id="subjects" class="form-control" value="@SelectedSubjectId" @onchange="@(e => OnValidSubmit(e.Value))">                 
                    @foreach (SubjectDto subject in Subjects)
                    {
                        <option value="@subject.Id">@subject.Name</option>
                    }
                </select>
            </div>            
        </div>
        <div class="row mt-4">
            <div class="col-3">or</div>
            <div class="col-4">
                <button class="btn btn-primary" @onclick="OnClick">Create new subject</button>
            </div>
        </div>
