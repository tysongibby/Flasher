@* referring page: "/" *@
@* nav URL: "/testsubject"*@
@page "/testsubject"
    <EditForm Model="Page" OnValidSubmit="OnClick">
        <div class="col">
            <div class="row">
                <h3>The Flasher</h3>
                <br />
                <h5>Flashcard application</h5>
                <h6>Test Subject</h6>
            </div>
            <div class="row mt-4">
                <div class="input-group">
                    <label for="testName" class="col-3 col-form-label">Enter new test name</label>
                    <InputText id="testName" class="form-control" @bind-Value="@NewTestName"></InputText>
                </div>
                <div class="input-group">
                    <label for="subjects" class="col-3 col-form-label">Choose a subject</label>
                    <select id="subjects" class="form-control" value="@SelectedSubjectId" @onchange="@(e => OnSelect(e.Value))">
                        @foreach (SubjectDto subject in Subjects)
                        {
                            <option value="@subject.Id">@subject.Name</option>
                        }
                    </select>
                </div>
            </div>
            <div class="row mt-4">
                <div class="col-3">or</div>
                <div class="col-4">
                    <button class="btn btn-primary" type="submit">Create new subject</button>
                </div>
            </div>
            @*<div class="row mt-4">
                    <div class="input-group">
                        <label for="start" class="col-2 col-form-label"></label>
                        <button id="start" type="submit"  class="btn btn-primary col-2">Next</button>
                    </div>
                </div>*@
        </div>
    </EditForm>

