@* referring page: "TestSubject" *@
@* referring page: "Category_Create"*@
@* nav URL: "/testcategory/{NewTestId}"*@
@page "/testcategory/{testid:int}"


<EditForm Model="SelectedCategory" OnValidSubmit="OnValidSubmit">
    <div class="col">
        <div class="row">
            <h3>The Flasher</h3>
            <br />
            <h5>Flashcard application</h5>
            <h6>Test Category</h6>
        </div>
        <h5>Choose subject categories you would like questions from:</h5>
        <div class="row mt-4">
            @foreach (CategoryDto category in Categories)
            {
                <div class="form-check">
                    <input class="form-check-input" type="checkbox" id="@category.Id" value="false" @onchange="(e => { CheckboxClicked(category.Id, e.Value); })" />
                    <label class="form-check-label" for="@category.Name">
                        @category.Name
                    </label>
                </div>
            }
        </div>
        <div class="row mt-4">
            <div class="input-group">
                <a id="NewCategory" class="btn btn-outline-primary col-3" @onclick="AddCategory">Add a category</a>
                <button id="start" type="submit" class="btn btn-primary col-3 ps-2">Next</button>
            </div>
        </div>

    </div>
</EditForm>