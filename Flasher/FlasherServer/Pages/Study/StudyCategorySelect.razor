@page "/studycategoryselect/{selectedsubjectid}"

<EditForm Model="SelectedCategory" OnValidSubmit="HandleOnValidSubmit">
    <div class="col">
        <div class="row">
            <h3>The Flasher</h3>
            <br />
            <h5>Flashcard application</h5>
        </div>
        <h5>Choose subject categories you would like questions from:</h5>
        <div class="row mt-4">            
                @foreach (Category category in Categories)
                {
                    <div class="form-check">
                        <input class="form-check-input" type="checkbox" id="@category.Id" value="false" @onchange="(args => { CheckboxClicked(category.Id, args.Value); })" />
                        <label class="form-check-label" for="@category.Title">
                            @category.Title
                        </label>
                    </div>                        
                }                            
        </div>        
        <div class="row mt-4">
            <div class="input-group">
                <label for="start" class="col-2 col-form-label"></label>
                <button id="start" type="submit" class="btn btn-primary col-2">Start</button>
            </div>
        </div>

    </div>
</EditForm>