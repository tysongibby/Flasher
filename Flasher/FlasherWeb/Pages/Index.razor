@page "/"

<EditForm Model="FlashCard" OnSubmit="Submit">
    <div class="col">
        <div class="card">
            <div class="card-header">
                <h3>@Title</h3>
                <h5>@SupersetTitle, @SetTitle</h5>
            </div>
            <div class="card-body">
                <h5>@Side</h5>
                <p>@Body</p>
            </div>
            <div class="card-footer">
                <div class="row">
                    <button class="btn btn-primary" @onclick="FlipFlashCard">Show @ShowButton</button>
                    <div class="btn-group">
                        <button class="btn btn-outline-primary ml-4" @onclick="LastFlashCard">Last</button>
                        <button class="btn btn-outline-primary ml-4" @onclick="NextFlashCard">Next</button>
                    </div>
                </div>
                <div class="row mt-4">
                    <div class="form-check">
                        <InputCheckbox @onclick="UpdateAnswerStatus" @bind-Value="AnsweredCorrectly" id="answeredCorrectly" ></InputCheckbox>                        
                        <label class="form-check-label" for="answeredCorrectly">Answered Correctly</label>
                    </div>
                </div>
                <div class="row mt-4">
                    <InputSelect @bind-Value="AnsweredCorrectly"></InputSelect>
                </div>
            </div>
        </div>
    </div>
</EditForm>

