@page "/Import"


<EditForm Model="ImportPage" OnSubmit="() => Submit(FrontsTextAreaText, BacksTextAreaText)">
    <h3>Import Flash Cards</h3>
    @*Fronts*@
    <h4 class="mt-4">Text for Fronts</h4>
    <div class="row mt-2">
        <textarea rows="@FrontsTextAreaRows" cols="50" @bind="FrontsTextAreaText" />
    </div>
    @*Backs*@
    <h4 class="mt-4">Text for Backs</h4>
    <div class="row">
        <textarea rows="@BacksTextAreaRows" cols="50" @bind="BacksTextAreaText" />
    </div>
    <div class="row mt-4">
        <button class="btn btn-primary">Submit</button>
    </div>
    <div class="row mt-4">
        <h4>Results</h4>
        <textarea class="visually-hidden" @bind="ResultsTextAreaText"></textarea>
    </div>
</EditForm>

