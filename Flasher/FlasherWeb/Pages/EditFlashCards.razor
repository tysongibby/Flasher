@page "/Edit"

<h3>Edit Flash Cards</h3>

<h4 class="mt-4">Text for Fronts</h4>
<div class="row">    
    <textarea rows="@TextArea1Rows" cols="50" @bind-value="TextArea1Text" @bind-value:event="oninput" />
</div>
<h4 class="mt-4">Text for Backs</h4>
<div class="row">
    <textarea rows="@TextArea2Rows" cols="50" @bind-value="TextArea2Text" @bind-value:event="oninput" />
</div>
<div class="row mt-4">
    <button class="btn btn-primary" @onclick="() => Submit(TextArea1Text, TextArea2Text)">Submit</button>
</div>
<div class="row mt-4">
    <textarea @bind-value="TextArea3Text" @bind-value:event="onchange"></textarea>
</div>
